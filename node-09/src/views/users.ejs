<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Node.js</title>
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
    />
    <link rel="stylesheet" href="css/style.css" />
  </head>
  <body>
    <%- include('./partials/header') %>
    <main class="container">
      <h1>Usuarios</h1>
      <a href="/users/create" class="btn btn-sm btn-primary">Crear</a>

      <table class="table table-striped">
        <thead>
          <tr>
            <th>#</th>
            <th>Correo</th>
            <th>Imagen</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% rows.forEach(user => { %>
          <tr>
            <td><%= user.id %></td>
            <td><%= user.email %></td>
            <td>
              <img
                src="uploads/<%= user.image || 'arbol.png' %>"
                width="100"
                alt="Foto perfil"
              />
            </td>
            <td></td>
          </tr>
          <% }) %>
        </tbody>
      </table>
    </main>
    <%- include('./partials/footer') %>
  </body>
</html>
